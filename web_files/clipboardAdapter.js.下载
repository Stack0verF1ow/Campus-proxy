var ClipBoardAdapter=function(t){this.handlerID=t.handlerID||null,this.textID=t.textID||null,this.type=t.type||"copy",this.isAttr=t.isAttr||!1,this.isPlugin=!0,this.isActive=!1,this.clipBoardConfig=t.config||!1;var i=document.getElementById(t.handlerID);if(i){if(is.ie("<9")&&(this.isPlugin=!1),"string"!=typeof this.type)throw error("type error！");i.setAttribute("data-clipboard-action",this.type),!t.isAttr&&t.textID&&i.setAttribute("data-clipboard-target","#"+t.textID)}};ClipBoardAdapter.prototype.attach=function(){if(!this.isActive){this.isActive=!0;var t="cut"===this.type?"剪切":"复制",e=tr(t+"成功"),i=tr("浏览器版本过低，不支持复制剪切操作！"),r=tr("操作失败！");if(this.isPlugin){if(this.clipBoardConfig)a=new ClipboardJS("#"+this.handlerID,this.clipBoardConfig);else var a=new ClipboardJS("#"+this.handlerID);return a.on("success",function(t){alert(e)}),void a.on("error",function(t){alert(t.action+r)})}if(window.attachEvent&&window.clipboardData){var n=this,o=document.getElementById(this.handlerID);o.attachEvent("onclick",function(){var t="";if(n.isAttr)t=o.getAttribute("data-clipboard-text");else{var i=document.getElementById(n.textID);t=i.value||i.innerHTML}window.clipboardData.setData("Text",t),alert(e)})}else alert(i)}};